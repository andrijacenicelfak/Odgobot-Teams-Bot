{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Postavi novu sifru",
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 50,
                    "items": [
                        {
                            "type": "Input.Text",
                            "placeholder": "Password",
                            "id": "password",
                            "isRequired": true,
                            "style": "Password"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 20,
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Execute",
                                    "title": "Postavi",
                                    "verb": "changePassword"
                                }
                            ]
                        }
                    ]
                }
            ],
            "horizontalAlignment": "Center"
        }
    ]
}