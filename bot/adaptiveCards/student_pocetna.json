{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Ćao ja sam TZPU Bot, da li želiš da odgovaraš?",
            "wrap": true
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "Input.Number",
                    "placeholder": "Broj indeksa",
                    "id": "brojIndeksa"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Execute",
                                    "title": "Prijavi se",
                                    "verb" : "prijaviStudent"
                                }
                            ],
                            "id": "P"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Execute",
                                    "title": "Prikaži tabelu",
                                    "verb" : "prikaziTabeluStudent"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}