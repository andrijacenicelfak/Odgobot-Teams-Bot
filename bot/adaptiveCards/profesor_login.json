{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Ulogujte se kao profesor",
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 50,
                    "items": [
                        {
                            "type": "Input.Text",
                            "placeholder": "password",
                            "id": "password",
                            "isRequired": true,
                            "style": "Password"
                        }
                    ],
                    "separator": true,
                    "spacing": "None"
                },
                {
                    "type": "Column",
                    "width": 20,
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Execute",
                                    "title": "Login",
                                    "verb": "loginProfesor",
                                    "id": "passwordSubmit"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}